{
    "name": "@chat/component",
    "version": "3.0.1",
    "author": "ajvirtual",
    "license": "MIT",
    "main": "dist/index.js",
    "directories": {
        "lib": "dist"
    },
    "scripts": {
        "start": "nodemon --exec pnpm run build",
        "test": "jest",
        "test:watch": "jest --watch",
        "build": "pnpm run build:esbuild && pnpm run ts-types",
        "build:esbuild": "node --experimental-json-modules build.js",
        "build:esbuild-watch": "esbuild build.js --watch",
        "ts-types": "ttsc --emitDeclarationOnly --outDir dist",
        "ts-types:watch": " tsc --emitDeclarationOnly --outDir dist --watch"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.22.7",
        "@babel/preset-react": "^7.22.5",
        "@babel/preset-typescript": "^7.22.5",
        "@craco/craco": "^6.4.5",
        "@chat/config": "workspace:*",
        "@chat/graphql": "workspace:*",
        "@chat/lib": "workspace:*",
        "@types/autosize": "^4.0.1",
        "@types/react-datepicker": "^6.0.1",
        "@types/react-draft-wysiwyg": "^1.13.5",
        "react": "^18.1.0",
        "react-dom": "^18.1.0"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "ace-builds": "^1.4.12",
        "autosize": "^5.0.2",
        "history": "^5.3.0",
        "lodash": "^4.17.21",
        "lowlight": "^3.2.0",
        "highlight.js": "^11.10.0",
        "moment": "^2.29.1",
        "moment-timezone": "^0.5.33",
        "mustache": "^4.2.0",
        "popper-max-size-modifier": "^0.2.0",
        "prosemirror-state": "^1.4.3",
        "react-click-away-listener": "^2.2.2",
        "react-datepicker": "^6.1.0",
        "react-dropzone": "^14.2.3",
        "react-error-boundary": "^3.1.4",
        "react-loading-skeleton": "^3.1.0",
        "react-popper": "^2.3.0",
        "tippy.js": "^6.3.7",
        "tslib": "^2.3.1"
    },
    "eslintConfig": {
        "overrides": [
            {
                "rules": {
                    "import/no-anonymous-default-export": "off"
                }
            }
        ]
    }
}