{
  "extends": "../tsconfig/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "noEmit": false,
    "paths": {
      "@hooks/*": [
        "hooks/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@screen/*": [
        "screen/*"
      ],
      "@state/*": [
        "state/*"
      ],
      "@stories/*": [
        "state/*"
      ],
      "@test/*": [
        "test/*"
      ]
    }
  },
  "include": ["src"]
}
