{
  "name": "@chat/context",
  "version": "1.0.0",
  "description": "Mzara backend context",
  "author": "ajvirtual",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "nodemon --exec pnpm run build",
    "clean": "rm -rf node_modules",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run ts-types &&  pnpm run build:esbuild",
    "build:esbuild": "node --experimental-json-modules build.js",
    "watch": "ttsc -w",
    "w": "pnpm run watch",
    "typescript": "ttsc",
    "ts-types": "ttsc --emitDeclarationOnly --outDir dist",
    "migration:create": "typeorm migration:create ",
    "migration:start": "typeorm migration:run"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@chat/config": "workspace:*",
    "@chat/graphql": "workspace:*",
    "express-useragent": "^1.0.15",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.6.3",
    "body-parser": "^1.20.2",
    "currency-codes": "^2.2.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^12.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/nodemailer": "^6.4.14",
    "@types/showdown": "^2.0.6",
    "@types/ws": "^8.5.5"
  }
}
