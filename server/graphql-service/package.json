{
  "name": "@chat/graphql-service",
  "version": "1.0.0",
  "description": "",
  "author": "ajvirtual",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register ./src/server.ts",
    "start:development": "cross-env NODE_ENV=development pnpm run start",
    "start:test": "cross-env NODE_ENV=test pnpm run start",
    "build": "pnpm run typescript && pnpm run build:esbuild",
    "build:server": "pnpm run build",
    "build:esbuild": "node --experimental-json-modules build.js",
    "serve": "node ./dist/index.js",
    "serve:development": "cross-env NODE_ENV=dev.harea pnpm run serve",
    "serve:test": "cross-env NODE_ENV=test pnpm run serve",
    "test": "jest",
    "test:watch": "jest --watch",
    "typescript": "ttsc --emitDeclarationOnly --outDir dist",
    "generate-resolver": "ts-node -r tsconfig-paths/register ./src/bin/GenerateResolver.ts",
    "generate-dart-entities": "ts-node -r tsconfig-paths/register ./src/bin/dart/GenerateDartEntities.ts"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "apollo-server-express": "^2.24.0",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@chat/context": "workspace:*",
    "@chat/config": "workspace:*",
    "@chat/graphql": "workspace:*",
    "@mzara/graphql-service-core": "^1.3.2",
    "@types/multer": "^1.4.5"
  }
}
